{
  "settings": {
    "index": {
      "number_of_shards": 3,
      "number_of_replicas": 1
    }
  },
  "mappings": {
    "_meta": {
      "my_version": "1.0.1"
    },
    "date_detection": false,
    "dynamic_templates": [
      {
        "strings_as_keyword": {
          "mapping": {
            "type": "keyword",
            "ignore_above": 1024
          },
          "match_mapping_type": "string"
        }
      }
    ],
    "properties": {
      "@timestamp": {
        "type": "date"
      },
      "tags": {
        "type": "keyword",
        "ignore_above": 1024
      },
      "_meta": {
        "properties": {}
      }
    }
  }
}
